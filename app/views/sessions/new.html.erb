<div class="auth-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Sign in</h1>
        <p class="text-xs-center">
          <%= link_to "Need an account?", signup_path %>
        </p>

        <%= form_with(url: login_path, scope: :session) do |f| %>
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control form-control-lg" %>

          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control form-control-lg" %>

          <%= f.submit "Sing in", class: "btn btn-lg btn-primary pull-xs-right mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>